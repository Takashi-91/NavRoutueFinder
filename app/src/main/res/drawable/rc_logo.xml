<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFF"/>
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>

    <!-- Logo overlay -->
    <item>
        <bitmap
            android:src="@drawable/logo3"
            android:gravity="center"/>
    </item>
</layer-list>
